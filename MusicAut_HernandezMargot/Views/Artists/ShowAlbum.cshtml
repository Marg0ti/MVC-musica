@{
}
<div>
    <h4>Álbumes</h4>
    <hr />
    @if (Model != null && Model.Count > 0 )
    {
        <ul>
            @foreach (var album in Model)
            {
                <li>@album.Title</li>
            }
        </ul>
    }
    else
    {
        <p>No hay ningún álbum.</p>
    }
</div>

<div>
    <a asp-action="Index">Volver a la lista</a>
</div>