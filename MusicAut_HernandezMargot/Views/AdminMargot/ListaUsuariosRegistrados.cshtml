
@{
}

@model List<Microsoft.AspNetCore.Identity.IdentityUser>

	<h2>Lista de usuarios</h2>
	<table class="table">
		<thead>
			<tr>
				<th>
					Usuario
				</th>
				<th>
					Email
				</th>
			@if (User.IsInRole("Administrator"))
			{
				<th>
					Contraseña
				</th>
			}
		</tr>
		</thead>
		<tbody>
			@foreach (var user in Model)
			{
				<tr>
					<td>
						@user.UserName
					</td>
					<td>
						@user.Email
					</td>
				@if (User.IsInRole("Administrator"))
				{
					<td>
						@user.PasswordHash
					</td>
					<td>
						<a asp-action="EditUser" asp-route-id="@user.Id">Editar</a> |
						<a asp-action="DeleteUser" asp-route-id="@user.Id">Borrar</a>
					</td>
				}
				</tr>
			}
		</tbody>